# Frontend Dockerfile
FROM node:18-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy source code
COPY . .

# Expose Vite dev server port
EXPOSE 5173

# Set host to 0.0.0.0 to allow external access
ENV HOST=0.0.0.0

# Run development server
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0"]

